<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.kimwonjoon.infrastructure.dao.UserAvatarDao">

    <resultMap id="UserAvatarMap" type="top.kimwonjoon.infrastructure.dao.po.UserAvatar">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="avatar_id" property="avatarId"/>
    </resultMap>

    <insert id="insert" parameterType="top.kimwonjoon.infrastructure.dao.po.UserAvatar">
        INSERT INTO user_avatar(user_id, avatar_id) 
        VALUES(#{userId}, #{avatarId})
    </insert>

    <update id="update" parameterType="top.kimwonjoon.infrastructure.dao.po.UserAvatar">
        UPDATE user_avatar SET 
            user_id = #{userId},
            avatar_id = #{avatarId}
        WHERE id = #{id}
    </update>

    <select id="queryById" parameterType="java.lang.Integer" resultMap="UserAvatarMap">
        SELECT id, user_id, avatar_id
        FROM user_avatar
        WHERE id = #{id}
    </select>

    <select id="queryByUserId" parameterType="java.lang.Integer" resultMap="UserAvatarMap">
        SELECT id, user_id, avatar_id
        FROM user_avatar
        WHERE user_id = #{userId}
    </select>

    <select id="queryByAvatarId" parameterType="java.lang.Integer" resultMap="UserAvatarMap">
        SELECT id, user_id, avatar_id
        FROM user_avatar
        WHERE avatar_id = #{avatarId}
    </select>

    <select id="queryAll" resultMap="UserAvatarMap">
        SELECT id, user_id, avatar_id
        FROM user_avatar
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM user_avatar WHERE id = #{id}
    </delete>

    <delete id="deleteByUserId" parameterType="java.lang.Integer">
        DELETE FROM user_avatar WHERE user_id = #{userId}
    </delete>

    <delete id="deleteByAvatarId" parameterType="java.lang.Integer">
        DELETE FROM user_avatar WHERE avatar_id = #{avatarId}
    </delete>

</mapper>