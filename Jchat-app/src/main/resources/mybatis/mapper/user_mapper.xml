<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.kimwonjoon.infrastructure.dao.UserDao">

    <resultMap id="UserMap" type="top.kimwonjoon.infrastructure.dao.po.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="uuid" property="uuid"/>
        <result column="sex" property="sex"/>
        <result column="old" property="old"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="top.kimwonjoon.infrastructure.dao.po.User">
        INSERT INTO user(name, uuid, sex, old) 
        VALUES(#{name}, #{uuid}, #{sex}, #{old})
    </insert>

    <update id="update" parameterType="top.kimwonjoon.infrastructure.dao.po.User">
        UPDATE user SET 
            name = #{name},
            uuid = #{uuid},
            sex = #{sex},
            old = #{old}
        WHERE id = #{id}
    </update>

    <select id="queryById" parameterType="java.lang.Integer" resultMap="UserMap">
        SELECT id, name, uuid, sex, old, create_time, update_time
        FROM user
        WHERE id = #{id}
    </select>

    <select id="queryByUuid" parameterType="java.lang.String" resultMap="UserMap">
        SELECT id, name, uuid, sex, old, create_time, update_time
        FROM user
        WHERE uuid = #{uuid}
    </select>

    <select id="queryAll" resultMap="UserMap">
        SELECT id, name, uuid, sex, old, create_time, update_time
        FROM user
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM user WHERE id = #{id}
    </delete>

</mapper>